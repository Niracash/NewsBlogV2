@model IPagedList<NewsBlog.Models.AuditLog>

<div class="container">
    <h2>Audit Logs</h2>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Timestamp</th>
                <th>Username</th>
                <th>Action</th>
                <th>Details</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Timestamp</td>
                    <td>@log.UserName</td>
                    <td>@log.Action</td>
                    <td>@log.Details</td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
    </div>
</div>
